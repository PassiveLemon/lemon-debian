include-file = $HOME/.config/polybar/incmods.ini

[bar/lemon]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
fixed-center = true
wm-restack = bspwm
override-redirect = false
enable-ipc = true

top = true
background = ${colors.bg}
foreground = ${colors.fg}
border-bottom-size = 2
border-bottom-color = ${colors.pink}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

font-0 = "Iosevka Nerd Font:style=Medium:size=10;2"

modules-left = sep bspwm sep sep title
modules-center = date
modules-right = cpu sep sep memory sep sep volume sep sep eth wlan sep sep powermenu sep
